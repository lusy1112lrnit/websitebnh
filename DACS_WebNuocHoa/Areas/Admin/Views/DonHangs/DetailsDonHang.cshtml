@model IEnumerable<DACS_WebNuocHoa.Models.CTDonHang>

@{
    ViewBag.Title = "DetailsDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    int count = 1;
}

<h2> Chi tiết đơn hàng</h2>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable Example
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã Đơn Hàng</th>
                    <th>Tên Nước Hoa</th>
                    <th>Hình Ảnh</th>
                    <th>Số Lượng</th>
                    <th>Giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenNH)
                        </td>
                        <td>
                            <img src="@item.NuocHoa.Hinh" alt="" style="width: 100px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoLuong)
                        </td>
                        <td>
                            <p>@String.Format(info, "{0:N0} đ", item.Gia)</p>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
